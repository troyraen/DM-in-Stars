keywords = {cosmology,distances and redshifts,galaxies,observations,photometric,photometry,techniques},
title = {{Photometric Redshifts with the LSST: Evaluating Survey Observing Strategies}},
url = {http://arxiv.org/abs/1706.09507{\%}0Ahttp://dx.doi.org/10.3847/1538-3881/aa99d4},
